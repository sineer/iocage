#!/bin/sh
#
# $FreeBSD$
#

# PROVIDE: iocage
# REQUIRE: LOGIN cleanvar sshd
# BEFORE:  securelevel
# KEYWORD: shutdown

# Add the following lines to /etc/rc.conf to enable iocage:
#
# iocage_enable="YES"
#
#

. /etc/rc.subr

name="iocage"
rcvar=iocage_enable
exec_cmd="/root/iocage/iocage"

# read configuration and set defaults
load_rc_config "$name"
: ${iocage_enable="NO"}

start_cmd="iocage_start"
stop_cmd="iocage_stop"

iocage_start()
{
    if checkyesno ${rcvar}; then
        ${exec_cmd} rcboot
    fi
}

iocage_stop()
{
    if checkyesno ${rcvar}; then
        ${exec_cmd} rcshutdown
    fi
}

run_rc_command "$1"
